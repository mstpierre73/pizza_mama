@page
@model pizza_mama.Pages.MenuPizzaModel
@{
}

<html>
    <head>
        <title>Menu Pizza</title>
        <link rel="stylesheet" href="~/css/pizzaMenu.css" />
    </head>

    <body>
        <a asp-page="Index"><img src="~/images/small_logo.png" id="small_logo"/></a>

        <div class="title">
            <h1>Our Pizzas</h1>
        </div>
        

        <ul>
        @foreach(var pizza in Model.Pizza) {
            <li>@pizza.Name - @pizza.Price $</li>
        }
        </ul>

    </body>
</html>
