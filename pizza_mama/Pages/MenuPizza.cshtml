@page
@model pizza_mama.Pages.MenuPizzaModel
@{
}

<html>
    <head>
        <title>Menu Pizza</title>
        <link rel="stylesheet" href="~/css/pizzaMenu.css" />
    </head>

    <body>
        <a asp-page="Index"><img src="~/images/small_logo.png" id="small_logo"/></a>

        <div class="title">
            <h1>Our Pizzas</h1>
        </div>
        

        <div class="menu-list">
        @foreach(var pizza in Model.Pizza) {
            <div class="menu-list-item">
                <span class="menu-list-title">@pizza.Name</span>
                    <span class="menu-list-price">@String.Format("{0:0.00}", @pizza.Price) $</span>
                <br/>
                <span class="menu-list-ingredient">@pizza.Ingredients</span>

                @if (pizza.Vegetarian) {
                    <span class="menu-list-badge">Vegetarian</span>     
                }
            </div>
        }
        </div>

    </body>
</html>
